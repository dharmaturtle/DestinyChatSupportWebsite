<%= render :partial => 'search_form' %>
<% if @messages.blank? %>
    <p>There are not any messages currently in the logs.</p>
<% else %>
    <%= paginate @messages %>
    <%= render :partial => 'layouts/flashmessage'%>
    <div class="innerbox">
    <table>
        <tr><td colspan="3"><span class="timezone">Times are given in <%= @messages.first.time.strftime("%Z") %>.</span></td></tr>
        <% @messages.each do |m| %>
            <tr>
                <td class="time" title="<%= m.time.strftime("%m/%d/%Y %I:%M:%S %p %Z") %>" ><%= m.time.strftime("%b %-d, %-I:%M %P") %></td>
                <td class="user"><%= link_to m.nick ,:controller => "users", :action => 'show', :id => m.nick, :page => 1 %></td>
                <td class="message"><%= m.message %></td>
            </tr>
        <% end %>
    </table>
    </div>
    <%= paginate @messages %>
<% end %>
